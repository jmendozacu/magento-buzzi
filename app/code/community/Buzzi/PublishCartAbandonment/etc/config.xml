<config>
    <modules>
        <Buzzi_PublishCartAbandonment>
            <version>1.1.0</version>
        </Buzzi_PublishCartAbandonment>
    </modules>
    <global>
        <helpers>
            <buzzi_publish_cart_abandonment>
                <class>Buzzi_PublishCartAbandonment_Helper</class>
            </buzzi_publish_cart_abandonment>
        </helpers>
        <models>
            <buzzi_publish_cart_abandonment>
                <class>Buzzi_PublishCartAbandonment_Model</class>
                <resourceModel>buzzi_publish_cart_abandonment_resource</resourceModel>
            </buzzi_publish_cart_abandonment>
            <buzzi_publish_cart_abandonment_resource>
                <class>Buzzi_PublishCartAbandonment_Model_Resource</class>
                <entities>
                    <cart_abandonment>
                        <table>buzzi_publish_cart_abandonment</table>
                    </cart_abandonment>
                </entities>
            </buzzi_publish_cart_abandonment_resource>
        </models>
        <resources>
            <buzzi_publish_cart_abandonment_setup>
                <setup>
                    <module>Buzzi_PublishCartAbandonment</module>
                </setup>
            </buzzi_publish_cart_abandonment_setup>
        </resources>

        <buzzi>
            <publish>
                <cart_abandonment>
                    <label>Cart Abandonment</label>
                    <type>buzzi.ecommerce.cart-abandonment</type>
                    <cron_only>1</cron_only>
                </cart_abandonment>
            </publish>
        </buzzi>
    </global>

    <adminhtml>
        <events>
            <model_config_data_save_before>
                <observers>
                    <buzzi_publish_cart_abandonment>
                        <class>buzzi_publish_cart_abandonment/observer_configData</class>
                        <method>execute</method>
                    </buzzi_publish_cart_abandonment>
                </observers>
            </model_config_data_save_before>
        </events>
    </adminhtml>

    <crontab>
        <jobs>
            <buzzi_publish_event_cart_abandonment_send>
                <run>
                    <model>buzzi_publish_cart_abandonment/cron_submit::process</model>
                </run>
            </buzzi_publish_event_cart_abandonment_send>
        </jobs>
    </crontab>

    <default>
        <buzzi_publish_events>
            <cart_abandonment>
                <quote_last_action>1</quote_last_action>
                <global_schedule>1</global_schedule>
            </cart_abandonment>
        </buzzi_publish_events>
    </default>
</config>
